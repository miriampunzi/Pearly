<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="750dp"
    android:layout_height="850dp"
    android:backgroundTint="@android:color/holo_red_dark"
    android:background="@drawable/button_shape"
    android:layout_gravity="center"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gallery"
            android:textSize="40sp"
            android:textColor="@android:color/white"
            android:paddingLeft="15dp"
            android:paddingRight="510dp">
        </TextView>

        <TextView
            android:id="@+id/close_add"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/oval_shape"
            android:clickable="true"
            android:gravity="center"
            android:text="X"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textStyle="bold">
        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="700dp"
        android:layout_height="650dp"
        android:background="@drawable/text_shape"
        android:layout_margin="15dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="210dp">

            <ImageView
                android:id="@+id/troll_face"
                android:layout_width="254dp"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:src="@drawable/troll_face"
                android:clickable="true">
            </ImageView>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/troll_cage"
                android:layout_margin="20dp">
            </ImageView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="210dp">

            <ImageView
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:src="@drawable/troll_asian"
                android:layout_margin="20dp">
            </ImageView>

            <ImageView
                android:layout_width="368dp"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:src="@drawable/troll_parker">
            </ImageView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="210dp">

            <ImageView
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:src="@drawable/troll_woop"
                android:layout_margin="20dp">
            </ImageView>

            <ImageView
                android:layout_width="371dp"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:src="@drawable/troll_stinson">
            </ImageView>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/done_add"
        android:layout_width="125dp"
        android:layout_height="75dp"
        android:text="Done"
        android:textSize="30sp"
        android:textAllCaps="false"
        android:layout_gravity="end"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:clickable="true"
        android:enabled="false"
        android:background="@drawable/button_shape">
    </Button>
</LinearLayout>