<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="98dp"
            android:gravity="center"
            android:text="DARTH VADER'S TURN"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="517dp"
            android:layout_height="196dp"
            app:srcCompat="@drawable/dart_vader" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/darth2cards" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="762dp"
            android:layout_height="298dp"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/uno_card_green3" />
    </LinearLayout>

    <LinearLayout
        android:weightSum="3"
        android:id="@+id/layout50"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:weightSum="4">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="223dp"
                android:layout_height="385dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/uno_card_blue5" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="223dp"
                android:layout_height="385dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/uno_card_red2" />

            <LinearLayout

                android:layout_width="203dp"
                android:layout_height="204dp"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="110dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:gravity="right"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button4"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:text="Draw a card" />

                <Button
                    android:id="@+id/button5"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:text="say uno" />

                <Button
                    android:id="@+id/button6"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:text="finish turn" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>